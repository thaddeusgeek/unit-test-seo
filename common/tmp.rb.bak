class Meta
  attr_accessor :title,  :keywords, :description

  def initialize(line) # meta_file line
    items = line.split
    @items       = items[2]
    @keywords    = items[5]
    @description = items[7]
  end
end

class Page < Webpage
  def test
	  puts self.nokogiri.xpath('//body').text
	end
end

